[Unit]
Description=Rider-Pi Status API
After=network-online.target rider-broker.service
Wants=rider-broker.service

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/robot
Environment=STATUS_API_PORT=8080
ExecStart=/usr/bin/python3 -u services/status_api.py
Restart=on-failure
RestartSec=1
KillSignal=SIGINT
TimeoutStopSec=3

[Install]
WantedBy=multi-user.target