[Unit]
Description=Rider-Pi Vision dispatcher
After=network.target rider-broker.service
Requires=rider-broker.service

[Service]
User=pi
WorkingDirectory=/home/pi/robot
EnvironmentFile=/home/pi/robot/.env
ExecStart=/usr/bin/python3 -u apps/vision/dispatcher.py
Restart=on-failure
RestartSec=2s

[Install]
WantedBy=multi-user.target
